{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@mirror-dissonance/core": ["packages/mirror-dissonance/dist/index.js"]
    },
    "typeRoots": ["./node_modules/@types", "./packages/*/node_modules/@types"],
    "types": ["node", "jest", "inquirer", "js-yaml"]
  },
  "exclude": ["node_modules", "dist", "build"]
}
