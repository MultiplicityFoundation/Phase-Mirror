{
  "name": "mirror-dissonance-root",
  "version": "1.0.0",
  "private": true,
  "description": "Mirror Dissonance Protocol - A diagnostic tool for agentic domain-specific reasoning",
  "scripts": {
    "oracle:run": "pnpm --filter @mirror-dissonance/cli run start",
    "build": "pnpm -r run build",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:coverage:report": "jest --coverage && open coverage/lcov-report/index.html",
    "test:unit": "jest --testPathIgnorePattern=integration --passWithNoTests",
    "test:integration": "jest --testPathPattern=integration",
    "coverage:enforce": "jest --coverage --coverageReporters=text-summary && node scripts/check-coverage.js",
    "coverage:badge": "node scripts/generate-coverage-badge.js",
    "lint": "pnpm -r run lint",
    "clean": "pnpm -r run clean"
  },
  "keywords": [
    "mirror-dissonance",
    "agentic-reasoning",
    "oracle"
  ],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "fast-xml-parser": ">=5.3.4"
    }
  }
}
